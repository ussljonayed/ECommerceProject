@{
    ViewData["Title"] = "File Upload";
}

<h2 class="alert alert-info">File Upload Manager</h2>
<h4 class="text-primary">@ViewBag.msg</h4>

<div class="row">
    <div class="col-md-6">
        <form asp-action="UploadFile" enctype="multipart/form-data" method="post">
            <label>Upload File</label>
            <input type="file" name="filetoupload" class="form-control" value="" />
            <button type="submit" class="mt-2 btn btn-success">Upload File</button>
        </form>
    </div>
</div>

