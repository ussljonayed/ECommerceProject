@model ECommerceProject.Models.SaleDetails

@{
    ViewData["Title"] = "Create Sale Details";
}

<h1>Create</h1>

<h4>Sale Details</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="form-group">
                        <label asp-for="SalesOrderId" class="control-label"></label>
                        <select asp-for="SalesOrderId" class="form-control" asp-items="ViewBag.SalesOrderId"></select>
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label asp-for="ProductId" class="control-label"></label>
                        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="form-group">
                        <label asp-for="UnitId" class="control-label"></label>
                        <select asp-for="UnitId" class="form-control" asp-items="ViewBag.UnitId"></select>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="form-group">
                        <label asp-for="UnitPrice" class="control-label"></label>
                        <input asp-for="UnitPrice" class="form-control" />
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="form-group">
                        <label asp-for="SaleQuantity" class="control-label"></label>
                        <input asp-for="SaleQuantity" class="form-control" />
                        <span asp-validation-for="SaleQuantity" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
